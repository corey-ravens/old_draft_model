    PIVOT (MAX(prediction) FOR measurable_type IN ([expected_forty_dash],[expected_ten_split],[expected_twenty_split],[expected_flying_ten],[expected_flying_twenty],[expected_three_cone],[expected_short_shuttle],[expected_long_shuttle],[expected_broad_jump],[expected_vertical_jump],[expected_bench_reps],[expected_bench_work],[expected_swim_right],[expected_rip_left],[expected_right_turn],[expected_left_turn])) AS pvt
	ORDER BY workout_id
